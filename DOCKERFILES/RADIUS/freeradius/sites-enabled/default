server default {

listen {
    type = auth
    ipaddr = 0.0.0.0
    port = 1812
}

listen {
    type = acct
    ipaddr = 0.0.0.0
    port = 1813
}

authorize {
    preprocess
    chap
    mschap
    digest
    suffix

    eap {
        ok = return
    }

    ldap
    pap
}

authenticate {
    Auth-Type LDAP {
        ldap
    }

    pap
    chap
    mschap
    eap
}

post-auth {
    reply_log
}
}
