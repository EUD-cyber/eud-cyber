ldap {
    server = "ldap"
    port = 389

    identity = "cn=admin,dc=mycompany,dc=local"
    password = "Password1!"

    base_dn = "dc=mycompany,dc=local"

    user {
        base_dn = "ou=users,dc=mycompany,dc=local"
        filter = "(uid=%{%{Stripped-User-Name}:-%{User-Name}})"
    }

    group {
        base_dn = "dc=mycompany,dc=local"
        name_attribute = cn
    }

    update {
        control:Cleartext-Password := 'userPassword'
    }

    options {
        chase_referrals = yes
        rebind = yes
    }

    tls {
        start_tls = no
    }
}
